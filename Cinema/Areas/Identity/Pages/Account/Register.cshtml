@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" style="color:black">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.nome" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.nome" style="color:black">Nome</label>
                <span asp-validation-for="Input.nome" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.cognome" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.cognome" style="color:black">Cognome</label>
                <span asp-validation-for="Input.cognome" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.sesso" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.sesso" style="color:black">Sesso</label>
                <span asp-validation-for="Input.sesso" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.data_nascita" class="form-control" aria-required="true" type="dateTime" placeholder="name@example.com" />
                <label asp-for="Input.data_nascita" style="color:black">Data di nascita</label>
                <span asp-validation-for="Input.data_nascita" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.residenza" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.residenza" style="color:black">Residenza</label>
                <span asp-validation-for="Input.residenza" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" style="color:black">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword"style="color:black">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 py-2 col-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" aria-label="Role">
                    <option disabled selected>Seleziona il ruolo</option>
                </select>

            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
<br />
<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
