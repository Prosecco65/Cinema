@model Film

@{

    ViewData["Title"] = "Upsert";

}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class=" p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-light">Edit Film</h2>
            <hr/>
        </div>

        @*<div asp-validation-summary="All"></div>*@

        <div class="row mb-3">
            <label asp-for="titolo"></label>
            <input asp-for="titolo" class="form-cotrol" />
            <span asp-validation-for="titolo" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="genere"></label>
            <textarea asp-for="genere" rows="3" class="form-cotrol"></textarea>
            <span asp-validation-for="genere" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="descrizione"></label>
            <input asp-for="descrizione" class="form-cotrol" />
            <span asp-validation-for="descrizione" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="durata"></label>
            <input asp-for="durata" class="form-cotrol" />
            <span asp-validation-for="durata" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="copertina"></label>
            <input type="file" name="file" class="form-cotrol" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Torna alla lista
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
