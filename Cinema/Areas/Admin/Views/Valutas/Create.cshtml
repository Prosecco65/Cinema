@model Cinema.Models.Valuta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Valuta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="valutazione" class="control-label"></label>
                <input asp-for="valutazione" class="form-control" />
                <span asp-validation-for="valutazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_film" class="control-label"></label>
                <select asp-for="Id_film" class ="form-control" asp-items="ViewBag.Id_film"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
