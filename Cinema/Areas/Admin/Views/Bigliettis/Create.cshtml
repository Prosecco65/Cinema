@model Cinema.Models.Biglietti

@{
    ViewData["Title"] = "Crea Biglietti";
}

<h1>Crea</h1>

<h4>Biglietti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_posti" class="control-label"></label>
                <select asp-for="Id_posti" class ="form-control" asp-items="ViewBag.Id_posti"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_spettacolo" class="control-label"></label>
                <select asp-for="Id_spettacolo" class="form-control" asp-items="ViewBag.Id_film"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
