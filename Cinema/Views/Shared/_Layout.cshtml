<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.css">
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>  

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Amministrazione</a>
                                <div class="dropdown-menu">
                                    <a style="color:white" class="dropdown-item" asp-area="Admin"  asp-controller="Bigliettis" aspaction="Index">Biglietti</a>
                                    <a style="color:white" class="dropdown-item" asp-area="Admin"  asp-controller="Films" aspaction="Index">Film</a>
                                    <a style="color:white" class="dropdown-item" asp-area="Admin" asp-controller="Postis" aspaction="Index">Posti</a>
                                    <a style="color:white"  class="dropdown-item" asp-area="Admin" asp-controller="Salas" aspaction="Index">Sala</a>
                                    <a style="color:white" class="dropdown-item" asp-area="Admin" asp-controller="Spettacoloes" aspaction="Index">Spettacolo</a>
                                    <a style="color:white" class="dropdown-item" asp-area="Admin" asp-controller="Utentes" aspaction="Index">Utente</a>
                                    <a style="color:white" class="dropdown-item" asp-area="Admin" asp-controller="Valutas" aspaction="Index">Valutazione</a>
                                </div>
                            </li>
                        }

                        // pagine per user

                        @*@if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Content Management</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Valutas" aspaction="Index">Valutazione</a>
                                </div>
                            </li>
                        }*@
                    </ul>
                    
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Cinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/DataTables/DataTables-1.13.4/js/jquery.dataTables.js"></script>

    <script type="text/javascript" src="~/lib/DataTables/DataTables-1.13.4/js/dataTables.bootstrap5.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
